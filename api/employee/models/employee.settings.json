{
  "kind": "collectionType",
  "collectionName": "employees",
  "info": {
    "name": "Employee",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "phoneNumber": {
      "type": "string",
      "regex": "^[0-9\\-\\+]{9,15}$",
      "maxLength": 15,
      "minLength": 8,
      "unique": false
    },
    "email": {
      "type": "email"
    },
    "skypeId": {
      "type": "string"
    },
    "facebook": {
      "type": "string"
    },
    "employeeId": {
      "type": "string"
    },
    "department": {
      "model": "department",
      "via": "employees"
    },
    "introduction": {
      "type": "text"
    },
    "avatar": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
